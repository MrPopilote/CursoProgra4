@model Universidad.Models.Carrera

@{
    ViewData["Title"] = "Crear Carrera";
}

<h1>Create</h1>

<h4>Carrera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" required />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facultad" class="control-label"></label>
                <input type="text" asp-for="Facultad" class="form-control" required placeholder="Digite la Facultad" />
                <span asp-validation-for="Facultad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCarrera" class="control-label"></label>
                <input type="text" asp-for="NombreCarrera" class="form-control" required placeholder="Digite el nombre de la carrera" />
                <span asp-validation-for="NombreCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>¿Tiene certificación?</label><br>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Certificacion" value="true" required />
                    <label class="form-check-label" for="Certificacion">Sí</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Certificacion" value="false" required />
                    <label class="form-check-label" for="Certificacion">No</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Sede" class="control-label"></label>
                <select asp-for="Sede" class="form-control" required>
                    <option value="">-- Seleccione una sede --</option>
                    <option>San José</option>
                    <option>Heredia</option>
                    <option>Cartago</option>
                    <option>Alajuela</option>
                    <option>Liberia</option>
                    <option>Limón</option>
                </select>
                <span asp-validation-for="Sede" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Carreras</a>
</div>

